---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllProjects } from "../../lib/projectFunctions";
import type { Project } from "../../types/projects";
import { render } from "astro:content";
import { Icon } from "astro-icon/components";

export async function getStaticPaths() {
  const allProjects = await getAllProjects();
  return allProjects.map((project: Project) => ({
    params: { slug: project.data.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const pageTitle = project.data.title;
// Get the compiled markdown content
const { Content } = await render(project);

// Format the date
const formattedDate = new Date(project.data.datePublished).toLocaleDateString(
  "en-US",
  {
    month: "long",
    day: "numeric",
    year: "numeric",
  },
);

// Determine schema type based on project category
const getSchemaType = (category: string) => {
  if (category === "software") return "SoftwareApplication";
  if (category === "music") return "MusicComposition";
  if (category === "education") return "LearningResource";
  return "CreativeWork";
};

// Prepare structured data for project
const projectSchema = {
  "@context": "https://schema.org",
  "@type": getSchemaType(project.data.category),
  "@id": `${Astro.site}projects/${project.data.slug}/#project`,
  name: project.data.title,
  description: project.data.description,
  url: project.data.url,
  datePublished: project.data.datePublished.toISOString(),
  ...(project.data.lastUpdated && {
    dateModified: project.data.lastUpdated.toISOString(),
  }),
  ...(project.data.dateStarted && {
    dateCreated: project.data.dateStarted.toISOString(),
  }),
  author: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
  },
  creator: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
  },
  ...(project.data.githubUrl && {
    codeRepository: project.data.githubUrl,
  }),
  ...(project.data.technologies && {
    keywords: project.data.technologies.join(", "),
  }),
  ...(project.data.technologies &&
    project.data.category === "software" && {
      programmingLanguage: project.data.technologies.map((tech: string) => ({
        "@type": "ComputerLanguage",
        name: tech,
      })),
    }),
  ...(project.data.image && {
    image: {
      "@type": "ImageObject",
      url: project.data.image.url,
      caption: project.data.image.alt,
    },
  }),
};
---

<BaseLayout
  pageTitle={pageTitle}
  description={project.data.description}
  type="article"
  publishedTime={project.data.datePublished.toISOString()}
  modifiedTime={(
    project.data.lastUpdated || project.data.datePublished
  ).toISOString()}
  image={project.data.image?.url}
  imageAlt={project.data.image?.alt}
  tags={project.data.technologies}
>
  <!-- Project Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(projectSchema)}
    slot="head"
  />
  <article class="max-w-4xl mx-auto">
    <!-- Project Header -->
    <header class="mb-8">
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
        {project.data.description}
      </p>

      <div
        class="flex flex-wrap gap-6 text-sm text-gray-600 dark:text-gray-400"
      >
        <div class="flex items-center gap-2">
          <Icon name="mdi:calendar" class="w-4 h-4" />
          <time datetime={project.data.datePublished.toISOString()}
            >{formattedDate}</time
          >
        </div>

        <div class="flex items-center gap-2">
          <Icon name="mdi:folder-outline" class="w-4 h-4" />
          <span>{project.data.category}</span>
        </div>
      </div>
    </header>

    <!-- Project Content -->
    <div class="space-y-12">
      <!-- Main Description -->
      <section class="prose dark:prose-invert max-w-none">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
          Project Details
        </h2>
        <p class="text-gray-700 dark:text-gray-300">
          {project.data.longDescription || project.data.description}
        </p>
      </section>

      <!-- Project Narrative -->
      <section class="prose dark:prose-invert max-w-none project-narrative">
        <Content />
      </section>

      <!-- Technologies Section -->
      {
        project.data.technologies && project.data.technologies.length > 0 && (
          <section>
            <h2 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">
              Technologies Used
            </h2>
            <div class="flex flex-wrap gap-2">
              {project.data.technologies.map((tech) => (
                <a
                  href={`/tags/${tech}`}
                  class="px-3 py-1 text-sm bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800/40 transition-colors"
                >
                  {tech}
                </a>
              ))}
            </div>
          </section>
        )
      }

      <!-- Tags Section -->
      {
        project.data.tags && project.data.tags.length > 0 && (
          <section>
            <h2 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">
              Tags
            </h2>
            <div class="flex flex-wrap gap-2">
              {project.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag}`}
                  class="px-3 py-1 text-sm bg-teal-100 text-teal-800 dark:bg-teal-900/30 dark:text-teal-300 rounded-full hover:bg-teal-200 dark:hover:bg-teal-800/40 transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </section>
        )
      }

      <!-- Project Links -->
      {
        project.data.url && (
          <section>
            <h2 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">
              Project Links
            </h2>
            <div class="flex flex-wrap gap-4">
              <a
                href={project.data.url}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-outline flex items-center gap-2"
              >
                <Icon name="mdi:web" class="w-5 h-5" />
                Visit Project
              </a>

              {project.data.githubUrl && (
                <a
                  href={project.data.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-outline flex items-center gap-2"
                >
                  <Icon name="mdi:github" class="w-5 h-5" />
                  View Source
                </a>
              )}
            </div>
          </section>
        )
      }
    </div>
  </article>
</BaseLayout>

<style>
  /* Hide the first h1 since we already show the title */
  .project-narrative :global(h1) {
    display: none;
  }
</style>
