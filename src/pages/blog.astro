---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPostListItem from "../components/BlogPostListItem.astro";
import { getCollection } from "astro:content";

// Get all blog posts and sort them by date
const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) =>
    new Date(b.data.datePublished).valueOf() -
    new Date(a.data.datePublished).valueOf(),
);

const pageTitle = "Blog Posts";

// Prepare Blog structured data
const blogSchema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "@id": `${Astro.site}blog/#blog`,
  url: `${Astro.site}blog/`,
  name: "Brylie's Blog",
  description:
    "Thoughts, tutorials, and insights about software development, music, data engineering, and technology",
  author: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
  },
  publisher: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
  },
  inLanguage: "en-US",
  blogPost: sortedPosts.map((post) => ({
    "@type": "BlogPosting",
    "@id": `${Astro.site}posts/${post.data.slug}/#article`,
    url: `${Astro.site}posts/${post.data.slug}/`,
    headline: post.data.title,
    datePublished: post.data.datePublished.toISOString(),
  })),
};
---

<BaseLayout
  pageTitle={pageTitle}
  description="Thoughts, tutorials, and insights about software development, music, data engineering, and technology from Brylie Christopher Oxley. Explore articles on Python, SQL, AI/ML, web development, and more."
>
  <!-- Blog Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(blogSchema)}
    slot="head"
  />
  <div class="max-w-4xl mx-auto">
    <!-- Introduction -->
    <section class="mb-12">
      <div
        class="bg-gradient-to-br from-teal-50 to-blue-50 dark:from-gray-800 dark:to-gray-900 rounded-xl p-6 shadow-sm"
      >
        <h1
          class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
        >
          Blog
        </h1>
        <p class="text-lg text-gray-700 dark:text-gray-300">
          Thoughts, tutorials, and insights about software development, music,
          and education.
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <div
      class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden"
    >
      {
        sortedPosts.map((post, index) => (
          <div
            class={`${index !== 0 ? "border-t border-gray-100 dark:border-gray-700" : ""}`}
          >
            <BlogPostListItem
              url={`/posts/${post.data.slug}`}
              title={post.data.title}
              datePublished={new Date(
                post.data.datePublished,
              ).toLocaleDateString("en-US", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })}
              description={post.data.description}
            />
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
