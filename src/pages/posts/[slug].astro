---
import Prose from "../../components/Prose.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, getEntry, render } from "astro:content";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  return allPosts.map((post) => ({
    params: { slug: post.data.slug },
  }));
}

const { slug } = Astro.params;
const post = await getEntry("blog", slug);

if (!post) {
  throw new Error(`Post not found: ${slug}`);
}

const { Content } = await render(post);

// Prepare structured data for BlogPosting
const blogPostingSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "@id": `${Astro.site}posts/${post.data.slug}/#article`,
  headline: post.data.headline || post.data.title,
  name: post.data.title,
  description: post.data.description,
  datePublished: post.data.datePublished.toISOString(),
  dateModified: (
    post.data.dateModified || post.data.datePublished
  ).toISOString(),
  author: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
    name: post.data.author || "Brylie Christopher Oxley",
  },
  publisher: {
    "@type": "Person",
    "@id": "https://brylie.online/#person",
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": `${Astro.site}posts/${post.data.slug}/`,
  },
  url: `${Astro.site}posts/${post.data.slug}/`,
  keywords: post.data.tags?.join(", ") || "",
  ...(post.data.image && {
    image: {
      "@type": "ImageObject",
      url: post.data.image.url,
      caption: post.data.image.alt,
    },
  }),
};
---

<BaseLayout
  pageTitle={post.data.title}
  description={post.data.description}
  type="article"
  publishedTime={post.data.datePublished.toISOString()}
  modifiedTime={(
    post.data.dateModified || post.data.datePublished
  ).toISOString()}
  author={post.data.author || "Brylie Christopher Oxley"}
  tags={post.data.tags}
  image={post.data.image?.url}
  imageAlt={post.data.image?.alt}
>
  <!-- BlogPosting Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(blogPostingSchema)}
    slot="head"
  />
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <div
        class="flex flex-wrap gap-6 text-sm text-gray-600 dark:text-gray-400"
      >
        <div class="flex items-center gap-2">
          <time datetime={post.data.datePublished.toISOString()}>
            {post.data.formattedDate}
          </time>
        </div>
        {
          post.data.author && (
            <div class="flex items-center gap-2">
              <span>By {post.data.author}</span>
            </div>
          )
        }
      </div>

      {
        post.data.description && (
          <p class="text-lg text-gray-700 dark:text-gray-300 mt-4">
            {post.data.description}
          </p>
        )
      }

      {
        post.data.image && (
          <div class="mt-6">
            <img
              src={post.data.image.url}
              alt={post.data.image.alt}
              class="w-full rounded-lg"
            />
          </div>
        )
      }
    </header>

    <!-- Post Content -->
    <div class="prose dark:prose-invert max-w-none">
      <Content />
    </div>

    <!-- Tags Section -->
    {
      post.data.tags && post.data.tags.length > 0 && (
        <section class="mt-8">
          <h2 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">
            Tags
          </h2>
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <a
                href={`/tags/${tag}`}
                class="px-3 py-1 text-sm bg-teal-100 text-teal-800 dark:bg-teal-900/30 dark:text-teal-300 rounded-full hover:bg-teal-200 dark:hover:bg-teal-800/40 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </section>
      )
    }
  </article>
</BaseLayout>
