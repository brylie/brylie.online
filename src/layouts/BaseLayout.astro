---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";
import "../styles/global.css";

interface Props {
  pageTitle?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  type?: "website" | "article" | "profile";
  canonical?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  pageTitle,
  description = "Personal website of Brylie Christopher Oxley, Data Platform Architect, featuring software projects, blog posts, and professional information.",
  image,
  imageAlt,
  type = "website",
  canonical,
  publishedTime,
  modifiedTime,
  author,
  tags,
} = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#111827" />
    <title>{pageTitle ? `${pageTitle} | Brylie` : "Brylie"}</title>

    <!-- SEO Meta Tags -->
    <SEO
      title={pageTitle || ""}
      description={description}
      image={image}
      imageAlt={imageAlt}
      type={type}
      canonical={canonical}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      tags={tags}
    />
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "https://brylie.online/#person",
            "name": "Brylie Christopher Oxley",
            "givenName": "Brylie",
            "familyName": "Oxley",
            "additionalName": "Christopher",
            "url": "https://brylie.online",
            "jobTitle": "Data Platform Architect",
            "email": "brylie@brylie.online",
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Tampere",
              "addressCountry": "Finland"
            },
            "knowsAbout": [
              "Data Architecture",
              "Python",
              "SQL",
              "ETL/ELT",
              "Data Warehousing",
              "Analytics Engineering",
              "Software Development",
              "Open Source",
              "Music Technology",
              "Accessibility"
            ],
            "knowsLanguage": [
              {
                "@type": "Language",
                "name": "English",
                "alternateName": "en"
              },
              {
                "@type": "Language",
                "name": "Finnish",
                "alternateName": "fi"
              }
            ],
            "sameAs": [
              "https://github.com/brylie",
              "https://www.linkedin.com/in/brylie",
              "https://dev.to/brylie",
              "https://www.youtube.com/@brylie"
            ]
          },
          {
            "@type": "WebSite",
            "@id": "https://brylie.online/#website",
            "url": "https://brylie.online",
            "name": "Brylie Christopher Oxley",
            "description": "Personal website featuring projects, blog posts, and professional information",
            "publisher": {
              "@id": "https://brylie.online/#person"
            }
          }
        ]
      }
    </script>
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- RSS Feed Discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Brylie.online RSS Feed"
      href={new URL("rss.xml", Astro.site)}
    />
    <!-- Allow page-specific head content -->
    <slot name="head" />
    <ClientRouter />
  </head>
  <body
    class="min-h-screen flex flex-col bg-gradient-to-br from-gray-900 to-gray-800 text-gray-100 transition-colors duration-300"
  >
    <Header />
    <main class="flex-grow w-full max-w-4xl mx-auto px-4 md:px-6 py-4 md:py-8">
      {
        pageTitle && (
          <h1 class="text-3xl md:text-4xl font-extrabold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">
            {pageTitle}
          </h1>
        )
      }
      <slot />
    </main>
    <Footer />
    <script
      data-name="BMC-Widget"
      data-cfasync="false"
      src="https://cdnjs.buymeacoffee.com/1.0.0/widget.prod.min.js"
      data-id="NuLovOOnrj"
      data-description="Support me on Buy me a coffee!"
      data-message="Thank you for supporting my work. I will be sure to pay your donation forward."
      data-color="#5F7FFF"
      data-position="Right"
      data-x_margin="18"
      data-y_margin="18"></script>
  </body>
</html>
