---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Brylie's personal website featuring projects, blog posts, and professional information"
    />
    <meta name="theme-color" content="#111827" />
    <title>{pageTitle ? `${pageTitle} | Brylie` : "Brylie"}</title>
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "https://brylie.online/#person",
            "name": "Brylie Christopher Oxley",
            "givenName": "Brylie",
            "familyName": "Oxley",
            "additionalName": "Christopher",
            "url": "https://brylie.online",
            "sameAs": [
              "https://github.com/brylie",
              "https://www.linkedin.com/in/brylie",
              "https://dev.to/brylie",
              "https://www.youtube.com/@brylie"
            ]
          },
          {
            "@type": "WebSite",
            "@id": "https://brylie.online/#website",
            "url": "https://brylie.online",
            "name": "Brylie Christopher Oxley",
            "description": "Personal website featuring projects, blog posts, and professional information",
            "publisher": {
              "@id": "https://brylie.online/#person"
            }
          }
        ]
      }
    </script>
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- RSS Feed Discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Brylie.online RSS Feed"
      href={new URL("rss.xml", Astro.site)}
    />
    <ClientRouter />
  </head>
  <body
    class="min-h-screen flex flex-col bg-gradient-to-br from-gray-900 to-gray-800 text-gray-100 transition-colors duration-300"
  >
    <Header />
    <main class="flex-grow w-full max-w-4xl mx-auto px-4 md:px-6 py-4 md:py-8">
      {
        pageTitle && (
          <h1 class="text-3xl md:text-4xl font-extrabold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">
            {pageTitle}
          </h1>
        )
      }
      <slot />
    </main>
    <Footer />
  </body>
</html>
