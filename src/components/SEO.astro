---
/**
 * SEO Component for Open Graph, Twitter Cards, and page-specific metadata
 *
 * @param title - Page title (without site name)
 * @param description - Page description for search engines and social sharing
 * @param image - Absolute URL to social sharing image (defaults to site image)
 * @param imageAlt - Alt text for social image
 * @param type - Open Graph type (website, article, profile)
 * @param canonical - Canonical URL (auto-generated if not provided)
 * @param publishedTime - ISO 8601 date for articles
 * @param modifiedTime - ISO 8601 date for articles
 * @param author - Author name for articles
 * @param tags - Array of article tags
 */

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: "website" | "article" | "profile";
  canonical?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  description,
  image = `${Astro.site}og-image.jpg`, // Default OG image
  imageAlt = "Brylie Christopher Oxley - Data Platform Architect",
  type = "website",
  canonical,
  publishedTime,
  modifiedTime,
  author,
  tags = [],
} = Astro.props;

// Generate canonical URL if not provided
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;

// Full title with site name
const fullTitle = title ? `${title} | Brylie` : "Brylie";

// Site name
const siteName = "Brylie";
---

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:site_name" content={siteName} />

{
  type === "article" && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  type === "article" && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}
{
  type === "article" && author && (
    <meta property="article:author" content={author} />
  )
}
{
  type === "article" &&
    tags.map((tag) => <meta property="article:tag" content={tag} />)
}

{
  type === "profile" && (
    <>
      <meta property="profile:first_name" content="Brylie" />
      <meta property="profile:last_name" content="Oxley" />
    </>
  )
}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<meta name="twitter:image:alt" content={imageAlt} />
