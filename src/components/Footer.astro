---
import Social from "./Social.astro";
import License from "./License.astro";
import { SocialPlatform } from "../data/socialPlatforms";
import { Icon } from "astro-icon/components";
---

<footer class="mt-auto py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Social links section -->
    <div
      class="bg-gradient-to-r from-teal-800 to-teal-700 text-white rounded-xl shadow-sm overflow-hidden"
    >
      <div class="p-6">
        <h2 class="text-xl font-bold mb-4">Let's connect</h2>
        <div class="flex flex-wrap justify-center gap-3">
          <Social
            platform={SocialPlatform.Bluesky}
            username="brylie.bsky.social"
          />
          <Social platform={SocialPlatform.Dev} username="brylie" />
          <Social platform={SocialPlatform.GitHub} username="brylie" />
          <Social platform={SocialPlatform.LinkedIn} username="brylie" />
          <Social platform={SocialPlatform.YouTube} username="brylie" />
        </div>
      </div>
    </div>

    <!-- RSS Feed button -->
    <div class="mt-6 text-center">
      <a
        href="/rss.xml"
        target="_blank"
        class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-gray-700 border border-gray-300 hover:bg-gray-100 dark:text-gray-300 dark:border-gray-700 dark:hover:bg-gray-800 transition-colors"
        aria-label="RSS Feed"
      >
        <Icon name="ic:round-rss-feed" class="w-5 h-5" />
        <span>Subscribe via RSS</span>
      </a>
    </div>

    <!-- Copyright and license info -->
    <div class="mt-8">
      <License />
      <p class="text-center text-sm text-gray-600 dark:text-gray-400 mt-4">
        Â© {new Date().getFullYear()} Brylie. All rights reserved.
      </p>
    </div>
  </div>
</footer>
