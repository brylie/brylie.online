---
import { Icon } from "astro-icon/components";
import type { SocialPlatform } from "../lib/socialPlatforms";

interface Props {
  platform: SocialPlatform;
  username: string;
}

const { platform, username } = Astro.props as Props;

const socialPlatforms = {
  bluesky: {
    url: `https://bsky.app/profile/${username}`,
    title: "Bluesky",
    icon: "logos:bluesky",
    color:
      "bg-sky-100 dark:bg-sky-900/40 text-sky-800 dark:text-sky-300 hover:bg-sky-200 dark:hover:bg-sky-800/60 hover:text-sky-900 dark:hover:text-sky-200",
  },
  dev: {
    url: `https://dev.to/${username}`,
    title: "DEV",
    icon: "mdi:dev-to",
    color:
      "bg-gray-100 dark:bg-gray-800/40 text-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700/60 hover:text-gray-900 dark:hover:text-gray-200",
  },
  github: {
    url: `https://github.com/${username}`,
    title: "GitHub",
    icon: "logos:github-icon",
    color:
      "bg-gray-100 dark:bg-gray-800/40 text-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700/60 hover:text-gray-900 dark:hover:text-gray-200",
  },
  linkedin: {
    url: `https://linkedin.com/in/${username}`,
    title: "LinkedIn",
    icon: "logos:linkedin-icon",
    color:
      "bg-blue-100 dark:bg-blue-900/40 text-blue-800 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800/60 hover:text-blue-900 dark:hover:text-blue-200",
  },
  youtube: {
    url: `https://youtube.com/@${username}`,
    title: "YouTube",
    icon: "logos:youtube-icon",
    color:
      "bg-red-100 dark:bg-red-900/40 text-red-800 dark:text-red-300 hover:bg-red-200 dark:hover:bg-red-800/60 hover:text-red-900 dark:hover:text-red-200",
  },
};
---

<a
  href={socialPlatforms[platform].url}
  class={`inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium border border-white/10 ${socialPlatforms[platform].color} transition-all duration-300 hover:scale-105 hover:-translate-y-0.5 focus:outline-none focus-visible:ring-2 focus-visible:ring-teal-500 focus-visible:ring-offset-2 focus-visible:ring-offset-transparent shadow-sm hover:shadow-md active:scale-95`}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Follow me on ${socialPlatforms[platform].title}`}
>
  <Icon
    name={socialPlatforms[platform].icon}
    class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
  />
  <span>{socialPlatforms[platform].title}</span>
</a>
