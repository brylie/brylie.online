---
import type { SocialPlatform } from "../data/socialPlatforms";

interface Props {
  platform: SocialPlatform;
  username: string;
}

const { platform, username } = Astro.props as Props;

const socialPlatforms = {
  github: {
    url: `https://github.com/${username}`,
    title: "GitHub",
  },
  linkedin: {
    url: `https://linkedin.com/in/${username}`,
    title: "LinkedIn",
  },
  youtube: {
    url: `https://youtube.com/@${username}`,
    title: "YouTube",
  },
};
---
<a
  href={socialPlatforms[platform].url}
  class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium border bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
>
  {socialPlatforms[platform].title}
</a>&nbsp;
